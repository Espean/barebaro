{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*"]
  },
  "routes": [
    {
      "route": "/admin",
      "rewrite": "/admin.html",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/admin.html",
      "allowedRoles": ["authenticated"]
    }
  ],
  "responseOverrides": {
    "401": {
      "statusCode": 302,
      "redirect": "/.auth/login/aad?post_login_redirect_uri=/admin.html"
    },
    "403": {
      "statusCode": 302,
      "redirect": "/.auth/login/aad?post_login_redirect_uri=/admin.html"
    }
  }
}
